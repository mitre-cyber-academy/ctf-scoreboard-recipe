#

worker_processes  1;
events {
  worker_connections  1024;
}
http {
  passenger_root <%= @passenger_root %>;
  passenger_ruby <%= @passenger_ruby %>;
  include mime.types;
  default_type  application/octet-stream;
  sendfile        on;
  keepalive_timeout  65;
  server {
    listen 443;
    ssl on;
    ssl_certificate /opt/nginx/conf/scoreboard.crt;
    ssl_certificate_key /opt/nginx/conf/scoreboard.key;
    root <%= @root %>;
    passenger_enabled on;
  }
  server {
    listen 80;
    rewrite ^(.*) https://$host$1 permanent;
  }
}